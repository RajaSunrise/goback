// UserHandler handles user-related endpoints
type UserHandler struct {
{{- if eq .Tool "gorm"}}
	db     *gorm.DB
{{- else if eq .Tool "sqlx"}}
	db     *sqlx.DB
{{- else if eq .Tool "sqlc"}}
	db     *sql.DB
